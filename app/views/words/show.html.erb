
<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-md-9">
      <h3 style="display: inline;"><%= @word.word %></h3>
      <ul class="list-inline">
      <div class='d-flex justify-content-end'>
        <%= link_to edit_word_path(@word), id: "button-edit-#{@word.id}" do %>
          <i class="bi bi-pencil-fill"></i>
        <% end %>
      </div>
          <p><%= simple_format(@word.body) %></p>
          <%= link_to '戻る', words_path, class: 'btn btn-light nav-link' %> 
      </div>
    </div>
  </div>
</div>

