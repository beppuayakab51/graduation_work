
<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-md-9">
      <h3 style="display: inline;"><%= @word.word %></h3>
      <ul class="list-inline">
        <!-- 作成日 -->
        <li class="list-inline-item"><%= l @word.created_at, format: :long %></li>
      </ul>
      <div class='d-flex justify-content-end'>
        <%= link_to edit_word_path(@word), id: "button-edit-#{@word.id}" do %>
          <i class="bi bi-pencil-fill"></i>
        <% end %>
      </div>
          <p><%= simple_format(@word.body) %></p>
      </div>
    </div>
  </div>
</div>

