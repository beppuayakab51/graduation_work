
<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-md-9">
      <h3 style="display: inline;"><%= @book.title %></h3>
      <div class='d-flex justify-content-end'>
        <%= link_to edit_book_path(@book), id: "button-edit-#{@book.id}" do %>
          <i class="bi bi-pencil-fill"></i>
        <% end %>
      </div>
      <!-- タブ -->
      <ul class="nav nav-tabs col-lg-8 offset-lg-2" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
          <button
            class="nav-link active"
            id="home-tab"
            data-bs-toggle="tab"
            data-bs-target="#home"
            type="button"
            role="tab"
            aria-controls="home"
            aria-selected="true"
          >
            原文
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button
            class="nav-link"
            id="yaku-tab"
            data-bs-toggle="tab"
            data-bs-target="#yaku"
            type="button"
            role="tab"
            aria-controls="yaku"
            aria-selected="false"
          >
            翻訳
          </button>
        </li>
      </ul>
          
      <div class="tab-content col-lg-8 offset-lg-2" id="myTabContent">
        <div
          class="tab-pane fade show active"
          id="home"
          role="tabpanel"
          aria-labelledby="home-tab"
        >
          <p><%= simple_format(@book.original_text) %></p>
        </div>
        <div
          class="tab-pane fade"
          id="yaku"
          role="tabpanel"
          aria-labelledby="yaku-tab"
        >
          <p><%= simple_format(@book.translated_text) %></p>
        </div>
      </div>
    </div>
  </div>
</div>
