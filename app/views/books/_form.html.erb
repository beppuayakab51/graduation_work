<%= form_with model: @book, class: "new_book row" do |f| %>
  <div class="mb-3">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="mb-3 col-6">
    <%= f.label :original_text %>
    <%= f.text_area :original_text, class: "form-control", rows: "10" %>
  </div>
  <div class="col-6">
    <%= f.label :translated_text %>
    <%= f.text_area :translated_text, class: "form-control", rows: "10" %>
  </div>
  <div class="col-6">
  <%= f.label :state %>
  <%= f.select :state, [[ "draft", "draft" ], [ "working", "working" ], [ "complete", "complete" ] ], { include_blank: "選択してください"} %>
</div>
  <%= f.submit nil, class: "btn btn-primary" %>
<% end %>
<div class="row">
<div class="col">
<!-- 単語登録 -->
<h3>
<%= link_to '単語登録', word_to_book_path, class: "bi bi-brush-fill",
:onclick=>"window.open(this.href,'hoge', 'height=500, width=800, left=2500');return false;" %>
</div>
</h3>
<div class="col">
<!-- 単語検索 -->
<h3>
<%= link_to '単語検索', search_to_word_path, 
:onclick=>"window.open(this.href,'hoge', 'height=500, width=800, left=2500');return false;" %>
</div>
</h3>
</div>