  <div class="alert alert-<%= message_type %>">
    <%= message %>
  </div>
<% end %>
<div class="container pt-3">
  <div class="row">
  </div>
  <%= link_to t('header.create_book'), new_book_path, class: 'btn btn-light nav-link' %>
